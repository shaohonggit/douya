.booklist{position:relative;width:100%;font-size:28rpx;border-bottom:20rpx solid transparent;padding:0 28.8rpx;padding-top:28.8rpx;box-sizing:border-box;background:#fff}.booklist-name{position:relative;height:1em;line-height:1;margin:0 0 28.8rpx -28.8rpx;padding-left:.8em;color:#049BFF;font-size:36rpx}.booklist-name:before{content:'';position:absolute;top:0;left:0;bottom:0;width:.2em;background:#049BFF}.booklist-item{position:relative;display:block;margin:28.8rpx 0;padding-bottom:28.8rpx;border-bottom:1rpx solid #EFEFEF;box-sizing:border-box}.booklist-item:last-child{border:none}.booklist-cover-wrapper{width:25%;height:0;padding-bottom:33.33333333%;overflow:hidden;background:transparent no-repeat top left;background-size:100% auto}.booklist-content-wrapper{position:absolute;top:0;left:25%;bottom:28.8rpx;width:75%;padding-left:28.8rpx;box-sizing:border-box}.booklist-cover{position:absolute;top:50%;left:50%;transform:translate(-50%, -50%);width:100%}.booklist-title{font-size:40rpx;color:#333;display:block;overflow:hidden;white-space:nowrap;text-overflow:ellipsis}.booklist-abstract{color:#999;display:-webkit-box;-webkit-line-clamp:2;-webkit-box-orient:vertical;overflow:hidden;word-break:break-all;text-overflow:ellipsis}.booklist-tags{position:absolute;left:28.8rpx;bottom:0;right:0}.booklist-tag{display:inline-block;padding:0 .6em;border-radius:1em;margin-right:.5em;font-size:90%;color:#9B9B9B;background:#F1F1F1}.booklist-status{position:relative;display:inline-block;float:right}.booklist-status .reset-text-star{vertical-align:text-top}.booklist-text{padding-left:.3em}