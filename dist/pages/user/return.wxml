
  <view class="user-return">
    <view class="weui-panel">
      <view class="weui-media-box weui-media-box_text">
        <view class="weui-media-box__title weui-media-box__title_in-text">请将图书邮寄至：</view>
        <view class="weui-media-box__desc">{{address}}</view>
      </view>
    </view>
    <view class="weui-panel">
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__bd">
            <input bindinput="typing" class="weui-input" value="{{express_co}}" placeholder="请输入快递公司" data-wpytyping-a="co"/>
          </view>
        </view>
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__bd">
            <input bindinput="typing" class="weui-input" value="{{express_id}}" placeholder="请输入快递单号" data-wpytyping-a="id"/>
          </view>
        </view>
      </view>
    </view>
    <button bindtap="doReturn" class="weui-btn btn-primary" type="primary">确认还书</button>
  </view>